<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- ================= SCHEMA ================= -->
    <changeSet id="create-schema-0000" author="mdpolashossein">
        <sql dbms="postgresql">
            CREATE SCHEMA IF NOT EXISTS banking_service;
        </sql>
        <rollback>
            <sql dbms="postgresql">
                DROP SCHEMA IF EXISTS banking_service CASCADE;
            </sql>
        </rollback>
    </changeSet>

    <!-- ================= BANKS ================= -->
    <changeSet id="banks-table-0001" author="mdpolashossein">
        <createTable tableName="banks" schemaName="banking_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="bank_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_code" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="swift_code" type="VARCHAR(20)"/>
            <column name="country" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <!-- Bank financials -->
            <column name="capital_amount" type="DECIMAL(18,2)" defaultValueNumeric="0.00">
                <constraints nullable="false"/>
            </column>

            <column name="total_profit" type="DECIMAL(18,2)" defaultValueNumeric="0.00">
                <constraints nullable="false"/>
            </column>

            <column name="total_expense" type="DECIMAL(18,2)" defaultValueNumeric="0.00">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <rollback>
            <dropTable tableName="banks" schemaName="banking_service"/>
        </rollback>
    </changeSet>

    <!-- ================= BANK ACCOUNTS ================= -->
    <changeSet id="bank-accounts-table-0002" author="mdpolashossein">
        <createTable tableName="bank_accounts" schemaName="banking_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="bank_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="account_number" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>

            <column name="account_type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="account_holder_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="balance" type="DECIMAL(18,2)" defaultValueNumeric="0.00">
                <constraints nullable="false"/>
            </column>

            <column name="currency" type="VARCHAR(10)" defaultValue="BDT"/>
            <column name="is_primary" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="status" type="VARCHAR(20)" defaultValue="ACTIVE"/>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                constraintName="fk_bank_accounts_bank"
                baseTableSchemaName="banking_service"
                baseTableName="bank_accounts"
                baseColumnNames="bank_id"
                referencedTableSchemaName="banking_service"
                referencedTableName="banks"
                referencedColumnNames="id"/>

        <rollback>
            <dropTable tableName="bank_accounts" schemaName="banking_service"/>
        </rollback>
    </changeSet>

    <!-- ================= TRANSACTIONS ================= -->
    <changeSet id="transactions-table-0003" author="mdpolashossein">
        <createTable tableName="transactions" schemaName="banking_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="transaction_ref" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="from_account_id" type="BIGINT"/>
            <column name="to_account_id" type="BIGINT"/>

            <column name="amount" type="DECIMAL(18,2)">
                <constraints nullable="false"/>
            </column>

            <column name="bank_fee" type="DECIMAL(10,2)" defaultValueNumeric="0.00"/>

            <column name="transaction_type" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>

            <column name="transaction_status" type="VARCHAR(20)" defaultValue="PENDING"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="processed_at" type="TIMESTAMP"/>
        </createTable>

        <rollback>
            <dropTable tableName="transactions" schemaName="banking_service"/>
        </rollback>
    </changeSet>

    <!-- ================= DAILY BANK SUMMARY ================= -->
    <changeSet id="bank-daily-summary-0004" author="mdpolashossein">
        <createTable tableName="bank_daily_summary" schemaName="banking_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="bank_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="summary_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="total_deposit" type="DECIMAL(18,2)"/>
            <column name="total_withdraw" type="DECIMAL(18,2)"/>
            <column name="total_fee_earned" type="DECIMAL(18,2)"/>
            <column name="total_transactions" type="BIGINT"/>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <rollback>
            <dropTable tableName="bank_daily_summary" schemaName="banking_service"/>
        </rollback>
    </changeSet>

    <!-- ================= TRANSACTION LOGS ================= -->
    <changeSet id="transaction-logs-table-0005" author="mdpolashossein">
        <createTable tableName="transaction_logs" schemaName="banking_service">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>

            <column name="transaction_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>

            <column name="message" type="TEXT"/>
            <column name="error_code" type="VARCHAR(50)"/>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <rollback>
            <dropTable tableName="transaction_logs" schemaName="banking_service"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
